{
  "name": "phaser-npm-webpack-typescript-starter-project",
  "version": "1.0.0",
  "watch": {
    "build:dev": {
      "patterns": [ "src", "assets" ],
      "extensions": "*",
      "quiet": true
    }
  },
  "scripts": {
    "mkdir:dist": "mkdirp dist",
    "clean:js:dev": "del-cli dist/game.js dist/game.js.map",
    "clean:js:dist": "del-cli dist/game.min.js",
    "clean:assets": "del-cli dist/assets/**",
    "clean:html": "del-cli dist/**/*.html",
    "lint": "tslint src/**/*.ts",
    "copy:html:dev": "ncp src/index.html dist/index.html && npm run setjs:dev",
    "copy:html:dist": "ncp src/index.html dist/index.html && npm run setjs:dist",
    "copy:assets": "npm run mkdir:dist && npm run clean:assets && ncp assets dist/assets",
    "setjs:dev": "node_modules/.bin/replace '%GAME_JS%' 'game.js' dist/index.html --silent",
    "setjs:dist": "node_modules/.bin/replace '%GAME_JS%' 'game.min.js' dist/index.html --silent",
    "pack:dev": "webpack --config webpack.dev.config.js --progress --colors && npm run clean:js:dist",
    "pack:dist": "webpack --config webpack.dist.config.js --progress --colors && npm run clean:js:dev",
    "build:dev": "echo-cli 'Building DEV ...' && npm run lint && npm run copy:assets && npm run copy:html:dev && npm run pack:dev && echo-cli 'Build Complete ✔'",
    "build:dist": "echo-cli 'Building DIST ...' && npm run lint && npm run copy:assets && npm run copy:html:dist && npm run pack:dist && echo-cli 'Build Complete ✔'",
    "watch": "npm-watch",
    "live-server": "live-server --open=dist --port=9000 --watch=dist/**/*.js --ignore=dist/**/*.js.map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rroylance/phaser-npm-webpack-typescript-starter-project.git"
  },
  "author": "Richard Roylance <https://github.com/rroylance>",
  "bugs": {
    "url": "https://github.com/rroylance/phaser-npm-webpack-typescript-starter-project/issues"
  },
  "homepage": "https://github.com/rroylance/phaser-npm-webpack-typescript-starter-project#readme",
  "devDependencies": {
    "@types/node": "7.0.4",
    "del-cli": "0.2.1",
    "echo-cli": "1.0.8",
    "git-revision-webpack-plugin": "2.4.1",
    "live-server": "1.2.0",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "npm-watch": "0.1.8",
    "phaser-ce": "2.7.3",
    "replace": "0.3.0",
    "ts-loader": "2.0.0",
    "tslint": "4.4.2",
    "typescript": "2.1.5",
    "webpack": "2.2.1"
  }
}
